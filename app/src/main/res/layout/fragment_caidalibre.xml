<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switchFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/freeFall"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:checked="false"/>

            <TextView
                android:id="@+id/textFormulaFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="5dp"
                android:fontFamily="monospace"
                android:text="@string/mruaFormula"
                android:textSize="24sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="10dp">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fisicaFF_inputY0"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true">

                    <EditText

                        android:id="@+id/fisicaFF_valueY0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/x0"
                        android:inputType="numberDecimal|numberSigned" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fisicaFF_inputY1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/fisicaFF_valueY1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/x1"
                        android:inputType="numberDecimal|numberSigned" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fisicaFF_inputV0"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/fisicaFF_valueV0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/v"
                        android:inputType="numberDecimal|numberSigned" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fisicaFF_inputTiempo"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="235dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/fisicaFF_valueTiempo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/t"
                        android:inputType="numberDecimal|numberSigned" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fisicaFF_inputG"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="310dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/fisicaFF_valueG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/a"
                        android:inputType="numberDecimal|numberSigned"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/fisicaFF_btn"
                    style="Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="375dp"
                    android:text="@string/calc"
                    />

                <TextView
                    android:id="@+id/fisicaFF_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="380dp"
                    android:layout_marginStart="190dp"
                    android:textSize="24sp"
                    tools:text="result" />


            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textFormulaV1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="5dp"
                android:fontFamily="monospace"
                android:text="@string/v1Formula"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="10dp">

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/fisicaFFV1_valueV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal|numberSigned"
                        android:hint="@string/v"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/fisicaFFV1_valueV0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal|numberSigned"
                        android:hint="@string/v0"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fisicaFFV1_inputG"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/fisicaFFV1_valueG"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal|numberSigned"
                        android:hint="@string/a"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="235dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/fisicaFFV1_valueT"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal|numberSigned"
                        android:hint="@string/t1"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="310dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/fisicaFFV1_valueT0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal|numberSigned"
                        android:hint="@string/t0"
                        android:text="0"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/fisicaFF_btn1"
                    style="Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="375dp"
                    android:text="@string/calc"/>

                <TextView
                    android:id="@+id/fisicaFFV1_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="380dp"
                    android:layout_marginStart="190dp"
                    android:textSize="24sp"
                    tools:text="result"/>



            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textFormulaV2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="5dp"
                android:fontFamily="monospace"
                android:text="@string/v2Formula"
                android:textAlignment="viewStart"
                android:textSize="24sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="10dp">

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/fisicaFFV2_valueV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal|numberSigned"
                        android:hint="@string/v"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/fisicaFFV2_valueV0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal|numberSigned"
                        android:hint="@string/v0"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fisicaFFV2_inputG"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/fisicaFFV2_valueG"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal|numberSigned"
                        android:hint="@string/a"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fisicaFFV2_inputX1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="235dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/fisicaFFV2_valueX1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal|numberSigned"
                        android:hint="@string/x1"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fisicaFFV2_inputX0"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="310dp"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/fisicaFFV2_valueX0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal|numberSigned"
                        android:hint="@string/x0"
                        android:text="0"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/fisicaFF_btn2"
                    style="Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="375dp"
                    android:text="@string/calc"/>

                <TextView
                    android:id="@+id/fisicaFFV2_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="380dp"
                    android:layout_marginStart="190dp"
                    android:textSize="24sp"
                    tools:text="result"/>



            </android.support.v7.widget.CardView>



        </LinearLayout>

    </ScrollView>




</android.support.constraint.ConstraintLayout>